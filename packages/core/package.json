{
  "name": "windowed-observable",
  "author": "Luis Takahashi",
  "version": "0.4.2",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/windowed-observable.esm.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "dev": "yarn start --format cjs --noClean",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --ci --coverage --maxWorkers=2",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "validate": "npm-run-all --parallel lint test:ci build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luistak/windowed-observable.git"
  },
  "bugs": {
    "url": "https://github.com/luistak/windowed-observable/issues"
  },
  "homepage": "https://github.com/luistak/windowed-observable#readme",
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "npm-run-all": "^4.1.5",
    "tsdx": "^0.13.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.7"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ]
  }
}
