{
  "name": "react-windowed-observable",
  "version": "0.2.1-0",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/react-windowed-observable.esm.js",
  "typings": "dist/index.d.ts",
  "author": "Luis Takahashi",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luistak/windowed-observable.git"
  },
  "bugs": {
    "url": "https://github.com/luistak/windowed-observable/issues"
  },
  "homepage": "https://github.com/luistak/windowed-observable/tree/master/packages/react#readme",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "dev": "yarn start --format cjs --noClean",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --ci --coverage --maxWorkers=2",
    "lint": "tsdx lint",
    "prepare": "tsdx build"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.3",
    "@testing-library/react": "^11.0.2",
    "@testing-library/user-event": "^12.1.1",
    "@types/react": "^16.9.43",
    "@types/react-dom": "^16.9.8",
    "@types/testing-library__jest-dom": "^5.9.2",
    "husky": "^4.2.5",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "jest-mock-console": "^1.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "tsdx": "^0.14.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "windowed-observable": "*"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts",
      "jest-mock-console/dist/setupTestFramework.js"
    ],
    "testEnvironment": "jest-environment-jsdom-sixteen"
  }
}
